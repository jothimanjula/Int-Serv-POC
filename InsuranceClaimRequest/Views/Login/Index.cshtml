@model InsuranceClaimRequest.Models.User
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>Login Page</h2>

@using (Html.BeginForm())
{
    
       @Html.ValidationSummary(true)
       
    <div style="border: 2px solid blue; padding: 30px 0 30px 30px; border-radius: 5px;
        width: 325px; margin: auto; display: table;">
        
        <table>
            <tr>
                <td valign="top">
                    @Html.LabelFor(model => model.LoginId)
                </td>
                <td>
                    @Html.EditorFor(model => model.LoginId)
                    <div style="height: 20px;">@Html.ValidationMessageFor(model => model.LoginId)
                    </div>
                </td>
            </tr>
            <tr>
                <td valign="top">
                    @Html.LabelFor(model => model.password)
                </td>
                <td>
                    @Html.EditorFor(model => model.password)
                    <div style="height: 20px;">@Html.ValidationMessageFor(model => model.password)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td style="text-align:center">
                    <input type="submit" value="Login" class="btn btn-info" />
                </td>
            </tr>
        </table>
    </div>
}